extends layout
block content
    div.row
        div.col-lg-12.col-md-12.col-sm-12.col-xs-12
            div.col-lg-4.col-lg-offset-4.col-md-4.col-md-offset-4.col-sm-4.col-sm-offset-4.col-xs-4.col-xs-offset-4.foo-top
                h3
                    strong #{city}
    div.row
        div.col-lg-12.col-md-12.col-sm-12.col-xs-12
            div.col-lg-2.col-md-2.col-sm-2.col-xs-2.col-lg-offset-3.col-md-offset-3.col-sm-offset-3.col-xs-offset-3.foo-country
                h4
                    strong Country
                p #{country}
            div.col-md-2.col-sm-2.foo-description
                h4
                    strong Description
                p #{description}
            div.col-md-2.col-sm-2.foo-day-wind
                h4
                    strong Wind
                p #{wind} (mph)
    div.row
        div.col-md-12.col-sm-12
            div.col-md-1.col-sm-1.col-md-offset-3.col-sm-offset-3.foo-temp.foo-temp-min
                h5
                    strong Min
                p #{minTemp}
            div.col-md-1.col-sm-1.foo-temp.foo-temp-mor
                h5
                    strong Morning
                p #{morningTemp}
            div.col-md-1.col-sm-1.foo-temp.foo-temp-day
                h5
                    strong Day
                p #{dayTemp}
            div.col-md-1.col-sm-1.foo-temp.foo-temp-eve
                h5
                    strong Evening
                p #{eveningTemp}
            div.col-md-1.col-sm-1.foo-temp.foo-temp-night
                h5
                    strong Night
                p #{nightTemp}
            div.col-md-1.col-sm-1.foo-temp.foo-temp-max
                h5
                    strong Max
                p #{maxTemp}


